<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Dự án laptopshop" />
    <title>Manage User</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav') -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Orders</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active">Order</li>
                            </ol>
                            <div class="container-fluid">
                                <hr />
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <th>Id</th>
                                        <th>User</th>
                                        <th>Total Price</th>
                                        <th>Status</th>
                                        <th>Payment Method</th>
                                        <th>Payment Status</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(function(order) { %>
                                            <tr>
                                                <td>
                                                    <%= order?.id %>
                                                </td>
                                                <td>
                                                    <%= order?.user?.fullName %>
                                                </td>
                                                <td>
                                                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                        currency: 'VND' }).format(order?.totalPrice) %>
                                                </td>
                                                <td>
                                                    <%= order?.status %>
                                                </td>
                                                <td>
                                                    <%= order?.paymentMethod %>
                                                </td>

                                                <td>
                                                    <%= order?.paymentStatus %>
                                                </td>

                                                <td>
                                                    <div class="container d-flex gap-2">
                                                        <form action="/admin/order/<%= order?.id %>" method="get">
                                                            <button type="submit" class="btn btn-warning">View
                                                                Detail</button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item">
                                            <a class="<%= page === 1 ? 'page-link disabled' : 'page-link'%>"
                                                href="/admin/order?page=<%= page - 1 %>" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <% for(var i=1; i <=totalPages; i++) { %>
                                            <li class="page-item"><a
                                                    class="<%= page === i ? 'page-link active' : 'page-link' %>"
                                                    href="/admin/order?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <li class="page-item">
                                                    <a class="<%= page === totalPages ? 'page-link disabled' : 'page-link'%>"
                                                        href="/admin/order?page=<%= page + 1 %>" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                    </ul </div>
                            </div>

                    </main>
                    <%- include('../layout/footer') -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>